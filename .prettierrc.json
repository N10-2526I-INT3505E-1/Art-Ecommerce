{
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"endOfLine": "lf",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"pluginSearchDirs": ["."],
	"tailwindFunctions": ["clsx", "cn", "cva"],
	"overrides": [
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"proseWrap": "preserve"
			}
		}
	]
}
