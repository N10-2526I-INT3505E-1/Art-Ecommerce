{
	"name": "art-ecommerce",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"services/*"
	],
	"scripts": {
		"dev": "concurrently \"bun --filter web dev\" \"bun --filter api dev\"",
		"dev:api": "bun --filter api dev",
		"dev:web": "bun --filter web dev",
		"build": "bun --filter web build",
		"lint": "biome check --write . && prettier . --write",
		"rmdb": "rm -rf services/api/drizzle && cd services/api && bunx drizzle-kit generate && bunx drizzle-kit push"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/bun": "^1.2.22",
		"autoprefixer": "^10.4.22",
		"concurrently": "^9.2.1",
		"postcss": "^8.5.6",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"tailwindcss": "^4.1.17"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.17",
		"dotenv": "^17.2.2",
		"lucide-svelte": "^0.544.0",
		"slugify": "^1.6.6",
		"tsx": "^4.20.5"
	}
}