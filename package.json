{
  "name": "art-ecommerce",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun --filter web dev\" \"bun --filter api dev\"",
    "dev:api": "bun --filter api dev",
    "dev:web": "bun --filter web dev",
    "lint": "biome check --write apps/web/src/ && biome check --write services/api/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
